<% layout('/layouts/boilerplate') -%>

<div class="row mt-3">
    <h1 class="col-6 offset-3 mb-3">SignUp on TripNest</h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input class="form-control" name="username" type="text" id="username" required/>
            <div class="valid-feedback">Looks Good!</div>
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Email ID </label>
            <input class="form-control" name="email" type="email" id="email" required/>
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input class="form-control" name="password" type="password" id="password" required/>
            <div class="valid-feedback">Strong Password!</div>
          </div>

          <button class="btn btn-success mb-3">Sign Up</button>
    </form>
  </div>
</div>
